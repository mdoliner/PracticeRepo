<h1><%= @album.name %></h1>
<h2>by <%= @album.band.name %>

<h3>Tracks</h3>
<ol>
  <% @album.tracks.each do |track| %>
    <li><a href="<%= track_url(track) %>"><%= track.name %></a></li>
  <% end %>
</ol>

<a href="<%= new_album_track_url(@album.id) %>">Add Track</a>

<%= button_to "Edit Album", edit_album_url(@album), method: :get %>
<%= button_to "Delete Album", album_url(@album), method: :delete %>

<a href="<%= band_url(@album.band_id) %>">Back to Band</a>
